<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/eq_color"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/dark_violet"
        android:textColor="@color/white"
        android:onClick="animationPage"
        android:text="Animations"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/workingsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/resultsTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.77" />

        <TextView
            android:id="@+id/resultsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:textColor="@color/violet"
            android:onClick="onClearClick"
            android:text="AC"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:onClick="onBackspaceClick"
            android:text="âŒ«"
            android:textColor="@color/violet" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:text=""
            android:onClick="onEmptyBtnClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:text="/"
            android:textColor="@color/violet"
            android:onClick="onOperatorClick"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="7"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="8"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="9"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:text="x"
            android:textColor="@color/violet"
            android:onClick="onOperatorClick"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="4"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="5"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="6"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:text="-"
            android:textColor="@color/violet"
            android:onClick="onOperatorClick"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="1"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="2"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="3"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:text="+"
            android:textColor="@color/violet"
            android:background="@color/dark_violet"
            android:onClick="onOperatorClick"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="."
            android:onClick="onDotClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonNumber"
            android:text="0"
            android:onClick="onNumberClick"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOperator"
            android:layout_weight="2"
            android:background="@color/eq_color"
            android:textColor="@color/violet"
            android:textSize="40sp"
            android:onClick="onEqualsClick"
            android:text="=" />

    </LinearLayout>

</LinearLayout>